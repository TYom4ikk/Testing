<Window x:Class="PhoneNumberValidatorProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneNumberValidatorProject"
        mc:Ignorable="d" Background="Wheat"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="PhoneNumberTextBox" Width="300" Margin="0,0,20,0" FontSize="22" VerticalAlignment="Center"/>
            <Button x:Name="CheckButton" Content="Проверить" Padding="16,8,16,8" Click="CheckButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
